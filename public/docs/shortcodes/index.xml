&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt;&lt;span style="color:#78787e"&gt;{{&lt;/span&gt;&lt;span style="color:#ff6ac1"&gt;%&lt;/span&gt; &lt;span style="color:#57c7ff"&gt;tab&lt;/span&gt; &lt;span style="color:#5af78e"&gt;&amp;#34;Linux&amp;#34;&lt;/span&gt; &lt;span style="color:#ff6ac1"&gt;%&lt;/span&gt;&lt;span style="color:#78787e"&gt;}}&lt;/span&gt; # Linux Content &lt;span style="color:#78787e"&gt;{{&lt;/span&gt;&lt;span style="color:#ff6ac1"&gt;%&lt;/span&gt; &lt;span style="color:#ff6ac1"&gt;/&lt;/span&gt;&lt;span style="color:#57c7ff"&gt;tab&lt;/span&gt; &lt;span style="color:#ff6ac1"&gt;%&lt;/span&gt;&lt;span style="color:#78787e"&gt;}}&lt;/span&gt;
&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt;&lt;span style="color:#78787e"&gt;{{&lt;/span&gt;&lt;span style="color:#ff6ac1"&gt;%&lt;/span&gt; &lt;span style="color:#57c7ff"&gt;tab&lt;/span&gt; &lt;span style="color:#5af78e"&gt;&amp;#34;Windows&amp;#34;&lt;/span&gt; &lt;span style="color:#ff6ac1"&gt;%&lt;/span&gt;&lt;span style="color:#78787e"&gt;}}&lt;/span&gt; # Windows Content &lt;span style="color:#78787e"&gt;{{&lt;/span&gt;&lt;span style="color:#ff6ac1"&gt;%&lt;/span&gt; &lt;span style="color:#ff6ac1"&gt;/&lt;/span&gt;&lt;span style="color:#57c7ff"&gt;tab&lt;/span&gt; &lt;span style="color:#ff6ac1"&gt;%&lt;/span&gt;&lt;span style="color:#78787e"&gt;}}&lt;/span&gt;
